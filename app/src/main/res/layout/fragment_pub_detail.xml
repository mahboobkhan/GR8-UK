<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Gr8niteout.pub.PubDetailFragment">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pagerBanner"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        tools:listitem="@layout/banner_image_item" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/txtOpen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/square_edit_text_transfer"
                            android:orientation="horizontal"
                            android:paddingLeft="6dp"
                            android:paddingTop="3dp"
                            android:paddingRight="6dp"
                            android:paddingBottom="3dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/pt33" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/viewPagerCountDots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:padding="15dp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="19dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgThumb"
                            android:layout_width="52dp"
                            android:layout_height="52dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtPubName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=""
                            android:textColor="@color/mgray"
                            android:textSize="@dimen/pt87" />

                        <RatingBar
                            android:id="@+id/ratingBar1"
                            style="@style/customRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"
                            android:numStars="5"
                            android:stepSize="1"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>

                <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1"
                    android:maxLines="3"
                    android:paddingRight="20dp"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/pt53"
                    app:animation_duration="1000" />

                <TextView
                    android:id="@+id/txtReadMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:text="Read More"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/pt48"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/img_checkin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/btn_round_green"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp15">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/location_icon" />

                <TextView
                    android:id="@+id/txt_check_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="center"
                    android:text="Check-In"
                    android:textColor="@color/white" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F8F8"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/square_round_top"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/txtFeatures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:text="Features"
                        android:textColor="@color/grayy"
                        android:textSize="@dimen/pt59" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E7" />

                <LinearLayout
                    android:id="@+id/layoutFeatures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E7" />

                <LinearLayout
                    android:id="@+id/layoutAmenities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/square_round"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/txtAmenities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_vertical"
                        android:text="See All Amenities"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/pt48"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_round_top"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="13dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="13dp">

                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="@color/grayy"
                        android:textSize="@dimen/pt59" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical">

                        <TextView
                            android:id="@+id/txtdistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/pt48" />
                    </LinearLayout>
                </LinearLayout>

                <fragment
                    android:id="@+id/map"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_round"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="16dp"
                    android:paddingRight="13dp"
                    android:paddingBottom="25dp">

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.5"
                        android:textColor="@color/mgray"
                        android:textSize="@dimen/pt53" />

                    <LinearLayout
                        android:id="@+id/layoutNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtTel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tel:"
                            android:textColor="@color/mgray"
                            android:textSize="@dimen/pt53" />

                        <TextView
                            android:id="@+id/txtNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/pt53" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutStation"
                        android:layout_width="717dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtNearest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nearest Station:"
                            android:textColor="@color/mgray"
                            android:textSize="@dimen/pt53" />

                        <TextView
                            android:id="@+id/txtStation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/pt53" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/square_round_top"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp">

                    <TextView
                        android:id="@+id/txtOpening"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:paddingLeft="6dp"
                        android:text="Opening Times"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/pt59" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_horizontal">

                        <TextView
                            android:id="@+id/txtStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/pt48" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E7" />

                <LinearLayout
                    android:id="@+id/layoutDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/square_round"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingBottom="22dp"></LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/txtBuyCredits"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:background="@color/peach"
        android:gravity="center"
        android:text="Buy Pub Credit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/pt64"
        android:visibility="gone" />
</LinearLayout>