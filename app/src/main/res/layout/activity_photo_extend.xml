<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pub.PhotoExtendActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/padding100"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/listitem_rounded_corner"
                    android:padding="9dp"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/image_layout"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/round">

                            <com.Gr8niteout.config.RoundImageview
                                android:id="@+id/user_image"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />

                            <TextView
                                android:id="@+id/First_Lett"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text=""

                                android:textColor="@android:color/white"
                                android:textSize="@dimen/pt67"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#2e2e2e"
                            android:textSize="@dimen/pt53" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:layout_weight="4"
                        android:gravity="center|right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/days_ago"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#a0a0a0"
                            android:textSize="@dimen/pt48" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/pubimageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/imgPlaceHolder"
                        android:layout_width="wrap_content"
                        android:layout_height="211dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/img_placeholder" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="20dp"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="#676767"
                    android:textSize="@dimen/pt48" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#C5C5C5"
                        android:orientation="horizontal" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/listitem_rounded_btm_corner"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/share_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp"
                        android:src="@mipmap/share_image" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

<!--                        <TextView-->
<!--                            android:id="@+id/view_comments"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_alignParentRight="true"-->
<!--                            android:gravity="center"-->
<!--                            android:paddingLeft="15dp"-->
<!--                            android:paddingTop="17dp"-->
<!--                            android:paddingRight="15dp"-->
<!--                            android:paddingBottom="17dp"-->
<!--                            android:text="View comments"-->
<!--                            android:textColor="#a0a0a0"-->
<!--                            android:textSize="@dimen/pt48" />-->
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tool_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Comments"
                android:textColor="@color/black"
                android:textSize="@dimen/pt67" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_above="@+id/edit_layout"
                android:layout_below="@+id/tool_layout">

            </androidx.recyclerview.widget.RecyclerView>

            <ImageView
                android:id="@+id/no_comment_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textNocommnt"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/comment"
                android:layout_marginTop="60dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textNocommnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:visibility="visible" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/send_button"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fadeScrollbars="false"
            android:hint="Leave a comment"
            android:inputType="textMultiLine"
            android:maxLength="2000"
            android:minLines="1"
            android:maxLines="4"
            android:paddingBottom="16.5dp"
            android:paddingLeft="@dimen/padding20"
            android:paddingRight="@dimen/padding20"
            android:paddingTop="16.5dp"
            android:scrollbars="vertical"
            android:textColor="#a0a0a0"
            android:textSize="13sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/send_button"
        android:layout_width="@dimen/padding100"
        android:layout_height="@dimen/padding100"
        android:background="#146DC9"
        android:onClick="PostClick"
        android:src="@mipmap/send_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>