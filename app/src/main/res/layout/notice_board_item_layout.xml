<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_12sdp">

            <RelativeLayout
                android:id="@+id/topLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rvImageLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_centerInParent="true">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/dateLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/anek500"
                        android:text="Date"
                        android:textColor="@color/text_heading"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvDate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/anek500"
                        android:text="20-03-2023"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivMore"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/icon_more" />

                <RelativeLayout
                    android:id="@+id/dropDown1"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivMore"
                    android:layout_marginTop="-3.5dp"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_6sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvEdit1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Edit"
                                android:fontFamily="@font/anek500"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:textColor="@color/black"
                                android:paddingVertical="@dimen/_6sdp"
                                android:textSize="@dimen/_11ssp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="#E8ECE2"/>

                            <TextView
                                android:id="@+id/tvDelete1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Delete"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:paddingVertical="@dimen/_6sdp"
                                android:fontFamily="@font/anek500"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </RelativeLayout>



            <LinearLayout
                android:id="@+id/dateLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/topLayout"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="visible"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anek500"
                    android:text="Date"
                    android:textColor="@color/text_heading"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tvDate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anek500"
                    android:text="20-03-2023"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/dateLayout2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anek500"
                    android:text="Title"
                    android:textColor="@color/text_heading"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anek500"
                    android:text="Cameron Williamson"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/noticeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/titleLayout"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anek500"
                    android:text="Notice"
                    android:textColor="@color/text_heading"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tvNotice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anek500"
                    android:text="Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet sint."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/dropDown2"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topLayout"
                android:layout_marginTop="-14dp"
                android:visibility="gone"
                android:layout_alignParentEnd="true">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_6sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvEdit2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Edit"
                            android:fontFamily="@font/anek500"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:textColor="@color/black"
                            android:paddingVertical="@dimen/_6sdp"
                            android:textSize="@dimen/_11ssp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#E8ECE2"/>

                        <TextView
                            android:id="@+id/tvDelete2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delete"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_6sdp"
                            android:fontFamily="@font/anek500"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/viewMoreLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anek600"
            android:text="View More ("
            android:textColor="@color/pub_green"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tvViewMoreCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anek600"
            android:text="50"
            android:textColor="@color/pub_green"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anek600"
            android:text=")"
            android:textColor="@color/pub_green"
            android:textSize="@dimen/_12ssp"/>

    </LinearLayout>

</LinearLayout>