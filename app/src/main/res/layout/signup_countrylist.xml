<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="?attr/actionBarSize"
        android:background="#FFFFFF"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Country"
            android:textColor="#0f0f0f"
            android:textSize="@dimen/pt67"
            android:layout_gravity="center" />
        </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#C5C5C5"
        android:layout_height="0.7dp"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="15dp"
    android:drawableLeft="@mipmap/search"
    android:paddingLeft="15dp"
    android:textSize="@dimen/pt53"
    android:maxLines="1"
    android:singleLine="true"
    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
    android:textColorHint="#9e9e9e"
    android:hint="Search Country or Code"
    android:drawablePadding="10dp"
    android:background="@drawable/square_edit_text"
    android:id="@+id/inputSearch"/>
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/CountryList"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>
