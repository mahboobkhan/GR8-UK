<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listcolor"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.24"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="55dp"
                android:id="@+id/image_layout"
                android:layout_height="55dp">
                <ImageView
                    android:layout_width="55dp"
                    android:id="@+id/imageView"
                    android:layout_height="55dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/First_Lett"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/pt87" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_weight="0.58">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/list_name"
                android:textSize="@dimen/pt61"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/days_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text=""
                android:textColor="@color/day_ago"
                android:textSize="@dimen/pt48"
                android:visibility="visible" />
        </LinearLayout>
        <!--<LinearLayout-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_gravity="center"-->
            <!--android:gravity="center"-->
            <!--android:layout_weight="0.18">-->
            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@mipmap/arrow"/>-->
        <!--</LinearLayout>-->
        <LinearLayout
            android:id="@+id/btn_buy_credit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp15"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/buy_credit_background"
            android:layout_weight="0.30"
            android:layout_marginRight="@dimen/dp10">

            <TextView
                android:id="@+id/txtBuyCredits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp5"
                android:textAllCaps="false"
                android:textColor="@color/dark_grey"
                android:text="Buy Credits"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>