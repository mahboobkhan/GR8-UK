<?xml version="1.0" encoding="utf-8"?>
<com.nguyenhoanglam.imagepicker.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@drawable/folder_placeholder"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@mipmap/upload_photos_black_transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_small"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:weightSum="1">


        <ImageView
            android:id="@+id/folderIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/padding_small"
            android:adjustViewBounds="true"
            android:background="@mipmap/folder"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingLeft="@dimen/padding_small"
            android:text="Text"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_gravity="bottom"
            android:gravity="right|center_vertical">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/padding_small"
                android:text="1212"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small"/>
        </RelativeLayout>
    </LinearLayout>

</com.nguyenhoanglam.imagepicker.view.SquareFrameLayout>